Controller:

	public ArrayList<String> enterStudents(Scanner in)
	{
		ArrayList<String> students = new ArrayList<String>();
		int counter = 0;
		
		
		while (counter == 0 || !students.get(counter-1).equalsIgnoreCase("done"))
		{
			System.out.println("Enter Student Names - If Done Enter Done:");
			students.add(in.nextLine());
			counter++;
		}			
		students.remove(counter-1);
		
		return students;
	}
	
			for (int i = 0; i < students.size(); i++)
		{
			if (studentsOnCourse.contains(students.get(i)))
			{
				System.out.println(students.get(i) + " is on the " + theCourse + " course");
			}
			else
			{
				System.out.println(students.get(i) + " is not on the " + theCourse + " course");
			}
	
